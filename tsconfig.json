{
  "compilerOptions": {
    "noImplicitAny": true,
    "strictNullChecks": true,
    // Angular is currently not compatible with recent TS version + strictNullCheck: https://github.com/angular/angular/issues/17863
    "skipLibCheck": true,
    "module": "commonjs",
    "target": "ES5",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,    
    "declaration": true,
    "outDir": "./dist",
    "lib": [
      "es2015",
      "dom"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "jasmine",
      "selenium-webdriver",
      "lodash",
      "reflect-metadata"
    ],
    "baseUrl": ".",
    "paths": {
      "@angular/*": [
        "../node_modules/@angular/*"
      ]
}    
  },
  "files": [
    "src/index.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "node_modules/@types"
  ],
  "awesomeTypescriptLoaderOptions": {
    "sourceMap": true,
    "inlineSourceMap": false
  },
  "angularCompilerOptions": {
    "genDir": "src/compiled"
  }
}
